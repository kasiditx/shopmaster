# =============================================================================
# ShopMaster Frontend - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control
# =============================================================================

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
# Backend API base URL
# Development: http://localhost:5000/api
# Production: https://api.yourdomain.com/api
REACT_APP_API_URL=http://localhost:5000/api

# WebSocket server URL
# Development: http://localhost:5000
# Production: https://api.yourdomain.com
REACT_APP_SOCKET_URL=http://localhost:5000

# -----------------------------------------------------------------------------
# Stripe Configuration
# -----------------------------------------------------------------------------
# Stripe publishable key (get from https://dashboard.stripe.com/apikeys)
# Test mode: pk_test_...
# Live mode: pk_live_...
REACT_APP_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
# Application name
REACT_APP_NAME=ShopMaster

# Application version
REACT_APP_VERSION=1.0.0

# Environment name (for display/debugging)
REACT_APP_ENV=development

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable/disable features
REACT_APP_ENABLE_WISHLIST=true
REACT_APP_ENABLE_REVIEWS=true
REACT_APP_ENABLE_NOTIFICATIONS=true

# -----------------------------------------------------------------------------
# Analytics (Optional)
# -----------------------------------------------------------------------------
# Google Analytics tracking ID
REACT_APP_GA_TRACKING_ID=

# -----------------------------------------------------------------------------
# CDN Configuration (Optional)
# -----------------------------------------------------------------------------
# CDN base URL for static assets
REACT_APP_CDN_URL=

# -----------------------------------------------------------------------------
# Build Configuration
# -----------------------------------------------------------------------------
# Generate source maps in production (true/false)
GENERATE_SOURCEMAP=false

# Enable React profiling in production (true/false)
REACT_APP_ENABLE_PROFILING=false
